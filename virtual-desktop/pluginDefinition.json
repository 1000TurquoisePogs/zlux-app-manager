{
  "identifier": "org.zowe.zlux.ng2desktop",
  "apiVersion": "1.0.0",
  "pluginVersion": "0.0.0-zlux.version.replacement",
  "pluginType": "desktop",
  "webContent": {
    "framework": "angular2"
  },
  "configurationData": {
    "resources": {
      "recognizers": {
        "locationType": "relative",
        "aggregationPolicy": "none"
      },
      "actions": {
        "locationType": "relative",
        "aggregationPolicy": "none"
      },
      "ui": {
        "subResources":{
          "launchbar": {
            "subResources": {
              "plugins": {
                "aggregationPolicy": "override",
                "variable": false,
                "locationType": "relative"
              }
            }
          }
        }
      },
      "session": {
        //this could be used to configure activity idle timeout, time to warn before expiration, and more
        //as well as max and min username and password lengths, or if another means is being used
        "subResources": {
          "security": {
            "aggregationPolicy": "none",
            "locationType":"relative"
          }
        }
      }
    }
  },
  "search": {
    "filename": "searchHandlers.js",
    "handlers": [
      {
        "type": "app",
        "name": "Apps",
        "description": "Launch App",
        "topics": ["apps"],
        "handlerFactory": "appsInit"
      },
      {
        "type": "web-json",
        "name": "knowledgecenter",
        "description": "IBM Knowledge Center",
        "topics": ["ibm","doc"],
        "title": "topics.#.label",
        "summary": "topics.#.summary",
        "resultHrefPrefix": "https://www.ibm.com/support/knowledgecenter/",
        "resultHref":  "topics.#.href",
        "requestType": 0,
        "queryParm": "query",
        "limitParm": "limit",
        "queryHref": "https://www.ibm.com/support/knowledgecenter/v1/search?query=%q&offset=0&products=&tags=&lang=en&fallback=true&"        
      }
    ]
  },
  "dataServices": [
    {
      "type": "router",
      "name": "browser-preferences",
      "filename": "browserPreferences.js",
      "routerFactory": "browserPreferencesRouter",
      "dependenciesIncluded": true,
      "initializerLookupMethod": "external",
      "version": "1.0.0"
    }    
  ]
}
